<% layout('layouts/boilerplate')%>
<div class="container justify-content-center">
  <div>
    <h1>Complete!!</h1>
  </div>
  <div>
    <p><%= correct%> question(s) correct out of <%= total%></p>
    <h1>
      <%= percent%>%
    </h1>
    <h2>Here are the questions to review!</h2>
      <% for (let item of incorrect) {%>
        <div class="card mb-3">
          <div class="card-body">
            <div class="card-title">
              <h3><%= item.question%><h3>
            </div>
            <h4 class="ml-3">Correct Answers:</h4>
            <ul class="list-group list-group-flush">
              <% for (let answer of item.correctAnswers) {%>
              <li class="list-group-item"><%= answer%></li>
              <% }%>
            </ul>
        </div>
      </div>
      <% }%>
      
    <form action="/start" method="GET">
      <button class="btn btn-danger mb-5 p-3">Try Again!</button>
    </form>
  </div>
</div>
